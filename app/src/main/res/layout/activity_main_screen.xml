<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="#787160"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20sp"
            android:layout_height="120sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="2sp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/abdullahm" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="33sp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="Abdullah Mujahid"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/adduserbtn"
            android:layout_width="76dp"
            android:layout_height="89dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="5sp"
            app:backgroundTint="#787160"
            app:cornerRadius="300sp"
            app:icon="@drawable/back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="36dp"
            android:layout_height="37dp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/search" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="10sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:shadowColor="#DF3636"
            android:text="Search" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Favourite Contacts"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="136dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>